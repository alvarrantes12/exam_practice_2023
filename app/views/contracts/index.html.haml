%p{:style => "color: green"}= notice
.div.m-4
  .page.header 
    %h1.mb-4
      = t('application.list_of_model', model: t('activerecord.modules.contract.other'))
    .float-end.pb-4
      = link_to t('application.create'), new_contract_path, class: "btn btn-primary"

%table.table.table-striped
  %thread
    %tr
      %th= t('activerecord.attributes.contract.location')
      %th
      %th
      %th

  %tbody
    - @contracts.each do |contract|
      %tr
        %td= contract.location
        %td= link_to t('application.show'), contract, class: "btn btn-info"
        %th= link_to t('application.edit'), edit_contract_path(contract), class: "btn btn-success"
        %td= button_to t('application.delete'), contract, method: :delete, class: "btn btn-danger"
%br
