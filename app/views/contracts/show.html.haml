%h1= t('activerecord.modules.contract.one')

%p#notice= notice

.div.m-4
  .card
    .card-body
      %h5.card-title
        = t('activerecord.attributes.contract.location')
      %p.card-text= @contract.location

.row.mt-4
  .offset-3.col-3
    = link_to t('application.back'), contracts_path, class: "btn btn-secondary"
  .col-3
    = link_to t('application.edit'), edit_contract_path(@contract), class: "btn btn-success"
