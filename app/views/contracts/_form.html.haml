=form_for @contract do |f|
  -if @contract.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = t('application.can_not_be_saved')
          %ul
          - @contract.errors.full_messages.each do |error|
            %li= error

  .form-group.mx-4
    = f.label :location, class: "form-label required"
  .div.w-25
    = f.text_field :location, autofocus: true, class: "form-control"

  .row.mt-4
    .col-3
      = link_to t('application.back'), contracts_path, class: "btn  btn-secondary btn-block"
    .col-3
      = button_tag t('application.save'), class: "btn btn-primary btn-block"
    .col-3
      = button_tag t('application.show'), class: "btn btn-primary btn-block"
