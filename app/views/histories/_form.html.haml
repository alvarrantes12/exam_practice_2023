=form_for @history, validates: true do |f|
  -if @history.errors.any?
    .card.mx-4
      %div{style: 'color: red'}
        %h2
          = t('application.can_not_be_saved')
        %ul
          -  @history.errors.each do |error|
            %li= error.full_message

  .form-group.mx-4 
    = f.label :version, class: "form-label required"
    .div.w-25 
      = f.text_field :version, autofocus: true, class: "form-control"


  .form-group.mx-4
    = f.label :comedian, class: "form-label required"
    .div.w-25
      = f.select(:comedian_id, options_for_select(@comedians, @history.comedian), {prompt: t('application.select')}, class: "form-control")


  .form-group.mx-4
    = f.label :contract, class: "form-label required"
    .div.w-25
      = f.select(:contract_id, options_for_select(@contracts, @history.contract), {prompt: t('application.select')}, class: "form-control")

  .row.mt-4 
    .offset-1.col-1
      = link_to t('application.back'), histories_path, class: "btn btn-secondary btn-block" 
    .col-2
      = button_tag t('application.save'), class: "btn btn-outline-success btn-block"