%p#notice= notice

.div.m-4
    .card
        .card-body
            %h5.card-title
                = t('activerecord.attributes.history.version')
            %p.card-text= @history.version
            %h5.card-title
                = t('activerecord.attributes.history.comedian')
            %p.card-text= @history.comedian.first_name  + " " + @history.comedian.last_name
            %h5.card-title
                = t('activerecord.attributes.history.contract')
            %p.card-text= @history.contract.location 

          
.row.mt-4
    .offset-3.col-3
        = link_to t('application.back'), histories_path, class: "btn btn-secondary"
    .col-3
        = link_to t('application.edit'), edit_history_path(@history), class: "btn btn-success"
