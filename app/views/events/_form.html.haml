=form_for @event, validate: true do |f|
  -if @event.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = t('application.can_not_be_saved')
          %ul
          - @event.errors.full_messages.each do |error|
            %li= error

  .form-group.mx-4
    = f.label :name, class: "form-label required"
  .div.w-25
    = f.text_field :name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :comedian, class: "form-label required"
  .div.w-25
    = f.select(:comedian_id, options_for_select(@comedians, @event.comedian), {prompt: t('application.select')}, class: "form-control")

  .row.mt-4
    .col-3
      = link_to t('application.back'), events_path, class: "btn  btn-secondary btn-block"
    .col-3
      = button_tag t('application.save'), class: "btn btn-primary btn-block"
