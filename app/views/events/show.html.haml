%p#notice= t('activerecord.modules.event.one')

.div.n-4
  .card
    .card-body
      %h5.card-title
        = t('activerecord.attributes.event.name')
      %p.card-text= @event.name

    .card-body
      %h5.card-title
        = t('activerecord.attributes.event.comedian')
      %p.card-text= @event.comedian.first_name.concat(' ').concat(@event.comedian.last_name)

  .row.mt-4
    .offset-3.col-3
      = link_to t('application.back'), events_path(@event), class: "btn btn-secondary"
    .col-3
      = link_to t('application.edit'), edit_event_path(@event), class: "btn btn-success"