%p{:style => "color: green"}= notice
.div.m-4
  .page.header
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.event.other'))
    .float-end.pb-4
      = link_to t('application.create'), new_event_path, class: "btn btn-primary" 

%table.table.table-striped
  %thread
    %tr
      %th= t('activerecord.attributes.event.name')
      %th
      %th
  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        %td= link_to t('application.show'), event, class: "btn btn-info"
        %th= link_to t('application.edit'), edit_event_path(event), class: "btn btn-success"
        %th= button_to t('application.delete'), event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
